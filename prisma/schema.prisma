generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  name     String
  password String
  role     String @default("user")
  phone          String?
  city           String?
  address        String?
  additionalInfo String?
  confirmed      Boolean @default(false) // Ajout de la confirmation
  createdAt      DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  tokens Token[] // Relation avec les tokens
}

model Token {
  id        String   @id @default(cuid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  used      Boolean  @default(false) // Indique si le token a été utilisé
  createdAt DateTime @default(now()) // Permet de vérifier s’il est expiré

  @@index([userId]) // Optimise les requêtes par utilisateur
}

model Product {
  id        String      @id @default(cuid())
  name      String      @unique
  price     Float
  oldPrice  Float
  category  String
  rating    Int
  reviews   Int
  description String
  features  String[]
  images    String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
