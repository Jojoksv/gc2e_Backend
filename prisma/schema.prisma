generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  name     String
  password String
  role     String @default("user")
}

model Product {
  id        String      @id @default(cuid())
  name      String      @unique
  price     Float
  oldPrice  Float
  category  String
  rating    Int
  reviews   Int
  description String
  features  String[]
  images    String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
